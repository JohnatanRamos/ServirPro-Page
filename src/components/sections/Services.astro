---
// Services component
---

<!-- Nuestros Servicios -->
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 mb-8 sm:px-6 lg:px-8">
    
    <!-- Título de la sección -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Nuestros Servicios</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Protegemos lo que más te importa con soluciones integrales de seguros y seguridad social</p>
    </div>

    <!-- Grid de servicios -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
      
      <!-- Primera fila -->
      <!-- Pólizas de Salud -->
      <div class="text-center group cursor-pointer">
        <div class="bg-white rounded-full w-20 h-20 md:w-24 md:h-24 mx-auto mb-4 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
          <!-- Icono más abajo -->
          <svg class="w-10 h-10 md:w-12 md:h-12 text-servir-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>
        <!-- Texto dentro del círculo -->
        <h3 class="text-sm md:text-base font-semibold text-gray-900 group-hover:text-servir-blue transition-colors duration-300">Pólizas de Salud</h3>
      </div>

      <!-- Seguros de Vida -->
      <div class="text-center group cursor-pointer">
        <div class="bg-white rounded-full w-20 h-20 md:w-24 md:h-24 mx-auto mb-4 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
          <!-- Icono más abajo -->
          <svg class="w-10 h-10 md:w-12 md:h-12 text-servir-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
          </svg>
        </div>
        <!-- Texto dentro del círculo -->
        <h3 class="text-sm md:text-base font-semibold text-gray-900 group-hover:text-servir-blue transition-colors duration-300">Seguros de Vida</h3>
      </div>

      <!-- Seguros para autos y motos -->
      <div class="text-center group cursor-pointer">
        <div class="bg-white rounded-full w-20 h-20 md:w-24 md:h-24 mx-auto mb-4 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
          <!-- Icono más abajo -->
          <svg class="w-10 h-10 md:w-12 md:h-12 text-servir-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12a3 3 0 006 0m-6 0a3 3 0 106 0m-6 0h6m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <!-- Texto dentro del círculo -->
        <h3 class="text-sm md:text-base font-semibold text-gray-900 group-hover:text-servir-blue transition-colors duration-300">Seguros para Autos y Motos</h3>
      </div>

      <!-- Seguros para Hogar -->
      <div class="text-center group cursor-pointer">
        <div class="bg-white rounded-full w-20 h-20 md:w-24 md:h-24 mx-auto mb-4 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
          <!-- Icono más abajo -->
          <svg class="w-10 h-10 md:w-12 md:h-12 text-servir-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>
        <!-- Texto dentro del círculo -->
        <h3 class="text-sm md:text-base font-semibold text-gray-900 group-hover:text-servir-blue transition-colors duration-300">Seguros para Hogar</h3>
      </div>

      <!-- Segunda fila -->
      <!-- Afiliaciones a EPS o ARL -->
      <div class="text-center group cursor-pointer">
        <div class="bg-white rounded-full w-20 h-20 md:w-24 md:h-24 mx-auto mb-4 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
          <!-- Icono más abajo -->
          <svg class="w-10 h-10 md:w-12 md:h-12 text-servir-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <!-- Texto dentro del círculo -->
        <h3 class="text-sm md:text-base font-semibold text-gray-900 group-hover:text-servir-blue transition-colors duration-300">Afiliaciones a EPS o ARL</h3>
      </div>

      <!-- Planes de Seguridad social -->
      <div class="text-center group cursor-pointer">
        <div class="bg-white rounded-full w-20 h-20 md:w-24 md:h-24 mx-auto mb-4 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
          <!-- Icono más abajo -->
          <svg class="w-10 h-10 md:w-12 md:h-12 text-servir-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <!-- Texto dentro del círculo -->
        <h3 class="text-sm md:text-base font-semibold text-gray-900 group-hover:text-servir-blue transition-colors duration-300">Planes de Seguridad Social</h3>
      </div>

      <!-- Intermediación ARL empresas -->
      <div class="text-center group cursor-pointer">
        <div class="bg-white rounded-full w-20 h-20 md:w-24 md:h-24 mx-auto mb-4 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
          <!-- Icono más abajo -->
          <svg class="w-10 h-10 md:w-12 md:h-12 text-servir-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <!-- Texto dentro del círculo -->
        <h3 class="text-sm md:text-base font-semibold text-gray-900 group-hover:text-servir-blue transition-colors duration-300">Intermediación ARL Empresas</h3>
      </div>

      <!-- Pólizas Colectivas -->
      <div class="text-center group cursor-pointer">
        <div class="bg-white rounded-full w-20 h-20 md:w-24 md:h-24 mx-auto mb-4 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
          <!-- Icono más abajo -->
          <svg class="w-10 h-10 md:w-12 md:h-12 text-servir-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <!-- Texto dentro del círculo -->
        <h3 class="text-sm md:text-base font-semibold text-gray-900 group-hover:text-servir-blue transition-colors duration-300">Pólizas Colectivas</h3>
      </div>
    </div>
  </div>
</section>
