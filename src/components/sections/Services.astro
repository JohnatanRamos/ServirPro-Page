---
// Services component
import ServiceIcon from '../ui/ServiceIcon.astro';
---

<!-- Nuestros Servicios -->
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 mb-8 sm:px-6 lg:px-8">
    
    <!-- Título de la sección -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-servir-dark-text">Nuestros Servicios</h2>
    </div>

    <!-- Grid de servicios -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
      
      <!-- Primera fila -->
      <ServiceIcon iconType="health" title="Pólizas de Salud" href="/polizas-salud" />
      <ServiceIcon iconType="life" title="Seguros de Vida" />
      <ServiceIcon iconType="auto" title="Seguros para Autos y Motos" />
      <ServiceIcon iconType="home" title="Seguros para Hogar" />

      <!-- Segunda fila -->
      <ServiceIcon iconType="eps" title="Afiliaciones a EPS o ARL" />
      <ServiceIcon iconType="security" title="Planes de Seguridad Social" />
      <ServiceIcon iconType="business" title="Intermediación ARL Empresas" />
      <ServiceIcon iconType="group" title="Pólizas Colectivas" />
    </div>
  </div>
</section>
