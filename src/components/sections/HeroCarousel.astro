---
// Hero Carousel component
---

<!-- Sección Principal (Carrusel) -->
<section class="relative h-screen overflow-hidden">
  <!-- Contenedor del Carrusel -->
  <div class="relative h-full">
    
    <!-- Slide 1 -->
    <div class="carousel-slide absolute inset-0 hero-background">
      <!-- Difuminado Azul -->
      <div class="hero-overlay absolute inset-0"></div>
      <!-- Contenido del Slide -->
      <div class="relative z-10 flex items-center justify-center h-full">
        <div class="text-center text-white px-4 max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            Tu tranquilidad<br>
            <span class="text-servir-green">asegurada</span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-100">
            Más de 10 años protegiendo a miles de familias colombianas
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#" class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-white bg-servir-green hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200">
              Cotizar Ahora
            </a>
            <a href="#" class="inline-flex items-center px-8 py-4 border-2 border-white text-lg font-medium rounded-md text-white hover:bg-white hover:text-servir-blue focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white transition-colors duration-200">
              Conocer Más
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Slide 2 -->
    <div class="carousel-slide absolute inset-0 hero-background hidden">
      <div class="hero-overlay absolute inset-0"></div>
      <div class="relative z-10 flex items-center justify-center h-full">
        <div class="text-center text-white px-4 max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            Seguros de <span class="text-servir-green">Vida</span><br>
            que protegen tu futuro
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-100">
            Planes flexibles adaptados a tus necesidades y presupuesto
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#" class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-white bg-servir-green hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200">
              Ver Planes
            </a>
            <a href="#" class="inline-flex items-center px-8 py-4 border-2 border-white text-lg font-medium rounded-md text-white hover:bg-white hover:text-servir-blue focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white transition-colors duration-200">
              Asesoría Gratis
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Slide 3 -->
    <div class="carousel-slide absolute inset-0 hero-background hidden">
      <div class="hero-overlay absolute inset-0"></div>
      <div class="relative z-10 flex items-center justify-center h-full">
        <div class="text-center text-white px-4 max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            <span class="text-servir-green">Seguridad Social</span><br>
            completa para ti
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-100">
            EPS, ARL y planes de seguridad social con la mejor cobertura
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#" class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-white bg-servir-green hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200">
              Afiliarme
            </a>
            <a href="#" class="inline-flex items-center px-8 py-4 border-2 border-white text-lg font-medium rounded-md text-white hover:bg-white hover:text-servir-blue focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white transition-colors duration-200">
              Más Información
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Botones de Navegación del Carrusel -->
    <button onclick="prevSlide()" class="absolute left-4 top-1/2 transform -translate-y-1/2 z-20 bg-white bg-opacity-20 hover:bg-opacity-30 text-white p-3 rounded-full transition-all duration-200">
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>
    <button onclick="nextSlide()" class="absolute right-4 top-1/2 transform -translate-y-1/2 z-20 bg-white bg-opacity-20 hover:bg-opacity-30 text-white p-3 rounded-full transition-all duration-200">
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>

    <!-- Indicadores del Carrusel -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 flex space-x-3">
      <button onclick="showSlide(0)" class="carousel-indicator w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-75 transition-all duration-200 active"></button>
      <button onclick="showSlide(1)" class="carousel-indicator w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-75 transition-all duration-200"></button>
      <button onclick="showSlide(2)" class="carousel-indicator w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-75 transition-all duration-200"></button>
    </div>
  </div>
</section>