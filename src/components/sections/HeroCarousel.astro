---
// Hero Carousel component
---

<!-- Sección Principal (Carrusel) -->
<section class="relative h-screen overflow-hidden">
    <!-- Contenedor del Carrusel -->
    <div id="hero-carousel" class="relative h-full">

        <!-- Slide 1 -->
        <div class="carousel-slide absolute inset-0 hero-background">
            <!-- Difuminado Azul -->
            <div class="hero-overlay absolute inset-0"></div>
            <!-- Contenido del Slide -->
            <div class="relative z-10 flex items-center justify-center h-full">
                <div class="text-center text-white px-4 max-w-6xl mx-auto">
                    <h1 class="text-5xl md:text-7xl font-bold mb-8 leading-tight">
                        Tu tranquilidad<br>
                        <span class="text-servir-green">asegurada</span>
                    </h1>
                    <p class="text-xl md:text-2xl mb-12 text-gray-100 max-w-3xl mx-auto">
                        Más de 10 años protegiendo a miles de familias colombianas con los mejores seguros y planes de
                        seguridad social
                    </p>
                    <div class="flex flex-col sm:flex-row gap-6 justify-center">
                        <a href="#"
                            class="bg-servir-blue text-white px-12 py-4 rounded-full font-semibold text-lg hover:bg-blue-700 transition-all duration-300 transform hover:scale-105 active:scale-95">
                            Cotizar Ahora
                        </a>
                        <a href="#"
                            class="border-2 border-white text-white px-12 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-servir-blue transition-all duration-300 transform hover:scale-105 active:scale-95">
                            Conocer Más
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-slide absolute inset-0 hero-background hidden">
            <div class="hero-overlay absolute inset-0"></div>
            <div class="relative z-10 flex items-center justify-center h-full">
                <div class="text-center text-white px-4 max-w-6xl mx-auto">
                    <h1 class="text-5xl md:text-7xl font-bold mb-8 leading-tight">
                        Seguros de <span class="text-servir-green">Vida</span><br>
                        que protegen tu futuro
                    </h1>
                    <p class="text-xl md:text-2xl mb-12 text-gray-100 max-w-3xl mx-auto">
                        Planes flexibles adaptados a tus necesidades y presupuesto, con la mejor cobertura del mercado
                    </p>
                    <div class="flex flex-col sm:flex-row gap-6 justify-center">
                        <a href="#"
                            class="bg-servir-blue text-white px-12 py-4 rounded-full font-semibold text-lg hover:bg-blue-700 transition-all duration-300 transform hover:scale-105 active:scale-95">
                            Ver Planes
                        </a>
                        <a href="#"
                            class="border-2 border-white text-white px-12 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-servir-blue transition-all duration-300 transform hover:scale-105 active:scale-95">
                            Asesoría Gratis
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-slide absolute inset-0 hero-background hidden">
            <div class="hero-overlay absolute inset-0"></div>
            <div class="relative z-10 flex items-center justify-center h-full">
                <div class="text-center text-white px-4 max-w-6xl mx-auto">
                    <h1 class="text-5xl md:text-7xl font-bold mb-8 leading-tight">
                        <span class="text-servir-green">Seguridad Social</span><br>
                        completa para ti
                    </h1>
                    <p class="text-xl md:text-2xl mb-12 text-gray-100 max-w-3xl mx-auto">
                        EPS, ARL y planes de seguridad social con la mejor cobertura y atención personalizada
                    </p>
                    <div class="flex flex-col sm:flex-row gap-6 justify-center">
                        <a href="#"
                            class="bg-servir-blue text-white px-12 py-4 rounded-full font-semibold text-lg hover:bg-blue-700 transition-all duration-300 transform hover:scale-105 active:scale-95">
                            Afiliarme
                        </a>
                        <a href="#"
                            class="border-2 border-white text-white px-12 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-servir-blue transition-all duration-300 transform hover:scale-105 active:scale-95">
                            Más Información
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botones de Navegación del Carrusel -->
        <button id="prev-slide"
            class="absolute left-6 top-1/2 transform -translate-y-1/2 z-20 bg-white bg-opacity-20 hover:bg-opacity-40 text-white p-4 rounded-full transition-all duration-300 backdrop-blur-sm">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </button>
        <button id="next-slide"
            class="absolute right-6 top-1/2 transform -translate-y-1/2 z-20 bg-white bg-opacity-20 hover:bg-opacity-40 text-white p-4 rounded-full transition-all duration-300 backdrop-blur-sm">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </button>

        <!-- Indicadores del Carrusel -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 flex space-x-4">
            <button class="carousel-indicator w-4 h-4 rounded-full bg-white bg-opacity-60 hover:bg-opacity-100 transition-all duration-300 active"
                data-slide="0"></button>
            <button class="carousel-indicator w-4 h-4 rounded-full bg-white bg-opacity-60 hover:bg-opacity-100 transition-all duration-300"
                data-slide="1"></button>
            <button class="carousel-indicator w-4 h-4 rounded-full bg-white bg-opacity-60 hover:bg-opacity-100 transition-all duration-300"
                data-slide="2"></button>
        </div>
    </div>
</section>