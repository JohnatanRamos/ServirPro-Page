<script>
    let currentReviewIndex = 0;
    const totalReviews = 4;
    const reviewsPerView = 2; // Mostrar 2 cards a la vez
    let reviewAutoPlayInterval;

    function updateReviewCarousel() {
        const carousel = document.getElementById('reviews-carousel');
        if (carousel) {
            // Calcular el desplazamiento: cada card ocupa 50% del ancho
            const translateX = -(currentReviewIndex * (100 / reviewsPerView));
            carousel.style.transform = `translateX(${translateX}%)`;
        }
    }

    function nextReview() {
        // Máximo índice considerando que mostramos 2 cards
        const maxIndex = totalReviews - reviewsPerView;
        currentReviewIndex = currentReviewIndex >= maxIndex ? 0 : currentReviewIndex + 1;
        updateReviewCarousel();
    }

    function previousReview() {
        const maxIndex = totalReviews - reviewsPerView;
        currentReviewIndex = currentReviewIndex <= 0 ? maxIndex : currentReviewIndex - 1;
        updateReviewCarousel();
    }

    function startReviewAutoPlay() {
        reviewAutoPlayInterval = setInterval(nextReview, 4000);
    }

    function stopReviewAutoPlay() {
        if (reviewAutoPlayInterval) {
            clearInterval(reviewAutoPlayInterval);
            reviewAutoPlayInterval = null;
        }
    }

    function pauseReviewAutoPlayOnInteraction() {
        stopReviewAutoPlay();
        // Reiniciar autoplay después de 8 segundos
        setTimeout(startReviewAutoPlay, 8000);
    }

    // Inicializar cuando el DOM esté listo
    document.addEventListener('DOMContentLoaded', function() {
        updateReviewCarousel();
        startReviewAutoPlay();
    });

    // Hacer las funciones globales para que funcionen con onclick
    window.nextReview = nextReview;
    window.previousReview = previousReview;
    window.pauseReviewAutoPlayOnInteraction = pauseReviewAutoPlayOnInteraction;
</script>
