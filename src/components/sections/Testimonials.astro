<script>
    let currentReviewIndex = 0;
    const totalReviews = 13;
    const reviewsPerView = 3; // Mostrar 3 cards a la vez

    function updateReviewCarousel() {
        const carousel = document.getElementById('reviews-carousel');
        if (carousel) {
            // Calcular el desplazamiento: cada card ocupa 33.333% del ancho
            const translateX = -(currentReviewIndex * (100 / reviewsPerView));
            carousel.style.transform = `translateX(${translateX}%)`;
        }
    }

    function nextReview() {
        // Máximo índice considerando que mostramos 3 cards
        const maxIndex = totalReviews - reviewsPerView;
        currentReviewIndex = currentReviewIndex >= maxIndex ? 0 : currentReviewIndex + 1;
        updateReviewCarousel();
    }

    function previousReview() {
        const maxIndex = totalReviews - reviewsPerView;
        currentReviewIndex = currentReviewIndex <= 0 ? maxIndex : currentReviewIndex - 1;
        updateReviewCarousel();
    }

    // Inicializar cuando el DOM esté listo
    document.addEventListener('DOMContentLoaded', function() {
        updateReviewCarousel();
    });

    // Hacer las funciones globales para que funcionen con onclick
    window.nextReview = nextReview;
    window.previousReview = previousReview;
</script>
