<script>
    let currentReviewIndex = 0;
    const totalReviews = 13;
    let reviewsPerView = 3; // Por defecto 3 cards en desktop
    let startX = 0;
    let isDragging = false;

    // Función para detectar el tamaño de pantalla y ajustar reviewsPerView
    function updateReviewsPerView() {
        if (window.innerWidth < 768) { // md breakpoint
            reviewsPerView = 1; // 1 card en móviles
        } else {
            reviewsPerView = 2; // 2  cards en desktop
        }
    }

    function updateReviewCarousel() {
        const carousel = document.getElementById('reviews-carousel');
        if (carousel) {
            // Calcular el desplazamiento basado en reviewsPerView actual
            const translateX = -(currentReviewIndex * (100 / reviewsPerView));
            carousel.style.transform = `translateX(${translateX}%)`;
        }
    }

    function nextReview() {
        // Máximo índice considerando reviewsPerView actual
        const maxIndex = totalReviews - reviewsPerView;
        currentReviewIndex = currentReviewIndex >= maxIndex ? 0 : currentReviewIndex + 1;
        updateReviewCarousel();
    }

    function previousReview() {
        const maxIndex = totalReviews - reviewsPerView;
        currentReviewIndex = currentReviewIndex <= 0 ? maxIndex : currentReviewIndex - 1;
        updateReviewCarousel();
    }

    // Funciones para manejo táctil/mouse
    function handleStart(e) {
        isDragging = true;
        startX = e.type === 'mousedown' ? e.clientX : e.touches[0].clientX;
    }

    function handleMove(e) {
        if (!isDragging) return;
        e.preventDefault();
    }

    function handleEnd(e) {
        if (!isDragging) return;
        isDragging = false;
        
        const endX = e.type === 'mouseup' ? e.clientX : e.changedTouches[0].clientX;
        const diffX = startX - endX;
        const threshold = 50; // Mínimo desplazamiento para activar

        if (Math.abs(diffX) > threshold) {
            if (diffX > 0) {
                nextReview(); // Deslizar hacia la izquierda = siguiente
            } else {
                previousReview(); // Deslizar hacia la derecha = anterior
            }
        }
    }

    // Inicializar cuando el DOM esté listo
    document.addEventListener('DOMContentLoaded', function() {
        updateReviewsPerView();
        updateReviewCarousel();

        // Agregar event listeners para touch/mouse
        const carousel = document.getElementById('reviews-carousel');
        if (carousel) {
            // Touch events
            carousel.addEventListener('touchstart', handleStart, { passive: false });
            carousel.addEventListener('touchmove', handleMove, { passive: false });
            carousel.addEventListener('touchend', handleEnd, { passive: false });
            
            // Mouse events
            carousel.addEventListener('mousedown', handleStart);
            carousel.addEventListener('mousemove', handleMove);
            carousel.addEventListener('mouseup', handleEnd);
            carousel.addEventListener('mouseleave', handleEnd);
            
            // Prevenir selección de texto durante el arrastre
            carousel.style.userSelect = 'none';
            carousel.style.cursor = 'grab';
        }

        // Actualizar en resize
        window.addEventListener('resize', function() {
            updateReviewsPerView();
            // Ajustar currentReviewIndex si es necesario
            const maxIndex = totalReviews - reviewsPerView;
            if (currentReviewIndex > maxIndex) {
                currentReviewIndex = maxIndex;
            }
            updateReviewCarousel();
        });
    });

    // Hacer las funciones globales para que funcionen con onclick
    window.nextReview = nextReview;
    window.previousReview = previousReview;
</script>
