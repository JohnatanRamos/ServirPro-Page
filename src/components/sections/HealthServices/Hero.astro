---
import { Image } from 'astro:assets';
import heroBg from '../../../assets/images/polizas-salud/Hero.webp';
import heroBgMobile from '../../../assets/images/polizas-salud/Hero-mobile.webp';

// HealthPolicySection.astro - Versión con imagen cubriendo 100% de ancho del diseño
const policyTitle = "Pólizas de salud";
const subtitle = "Acceso ilimitado a especialistas y clínicas de alta calidad,";
const description = "con atención preferencial y cobertura internacional.";
const buttonText = "Cotizar póliza";
---

<section class="h-[70vh] max-h-[70vh] sm:h-auto sm:max-h-none">
  <div class="w-full h-full">
    <div 
      class="relative overflow-hidden  h-full sm:min-h-[500px] md:min-h-[580px] lg:min-h-[650px]"
    >
      <!-- Imagen de fondo usando el componente Image -->
      <!-- Desktop y Tablet -->
      <Image src={heroBg} alt="Pólizas de salud" class="absolute inset-0 w-full h-full object-cover hidden sm:block" />
      <!-- Mobile -->
      <Image src={heroBgMobile} alt="Pólizas de salud mobile" class="absolute inset-0 w-full h-[80vh] border-none object-cover sm:hidden" />
      
      <!-- Banda de título en tablet y desktop: fija a la derecha -->
      <div id="title-band" class="hidden sm:block absolute top-24 md:top-28 lg:top-32 right-0 w-[45%] md:w-[40%] bg-servir-blue-dark rounded-l-full rounded-r-none shadow-md z-10 py-3 md:py-4 px-4 md:px-6">
        <h2 class="font-extrabold text-white leading-tight text-center text-3xl md:text-4xl lg:text-5xl">{policyTitle}</h2>
      </div>
      
      <div class="absolute inset-0 bg-opacity-20 sm:hidden"></div>
      
      <!-- Contenedor para móvil -->
      <div class="sm:hidden absolute inset-0 flex items-center justify-center p-6">
        <div class="w-full max-w-lg p-6 bg-transparent mt-[70%] z-10">
          <div class="text-center w-full">
            <!-- Título en móvil: caja azul pequeña centrada -->
            <div class="inline-block p-2 mb-10 rounded-lg bg-servir-blue-dark shadow-md">
              <h2 class="text-2xl font-extrabold text-white leading-tight">
                {policyTitle}
              </h2>
            </div>

            <p  class="mb-22">
              <span class="text-lg font-bold text-[#5793ce] leading-snug " style="font-weight:800">{subtitle}</span>
              <span class="text-base text-servir-blue-dark text-gray-700 " style="font-weight:600">
              {description}
            </span>
            </p>
            
    

            <a href="#" class="inline-block px-6 py-3 text-sm font-bold text-black bg-servir-green w-100 rounded-full shadow-lg transition duration-300 ease-in-out hover:bg-servir-green hover:shadow-xl" style="width:100%">
              {buttonText}
            </a>
          </div>
        </div>
      </div>

      <!-- Contenedor para tablet y desktop -->
      <div class="hidden sm:block">
        <!-- Contenido posicionado debajo de la banda, centrado respecto a ella -->
        <div class="absolute right-0 w-[45%] md:w-[40%] z-10 sm:top-[200px] md:top-[220px] lg:top-[230px]">
          <div class=" md:p-6 lg:p-8">
            <div class="text-center w-full">
              <p class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-bold text-[#5793ce] leading-snug font-extrabold">
                {subtitle}
              </p>
              
              <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-servir-blue-dark mb-6 md:mb-8 font-semibold">
                {description}
              </p>

              <a href="#" class="inline-block w-100  mt-4 sm:mt-6 md:mt-8 px-6 sm:px-8 py-2 sm:py-3 text-sm sm:text-base md:text-lg font-bold text-black bg-servir-green rounded-full shadow-lg transition duration-300 ease-in-out hover:bg-servir-green hover:shadow-xl">
                {buttonText}
              </a>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>