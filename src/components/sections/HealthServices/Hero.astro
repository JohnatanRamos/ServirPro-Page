---
import { Image } from 'astro:assets';
import heroBg from '../../../assets/images/polizas-salud/Hero.webp';
import heroBgMobile from '../../../assets/images/polizas-salud/Hero-mobile.webp';

// HealthPolicySection.astro - Versión con imagen cubriendo 100% de ancho del diseño
const policyTitle = "Pólizas de salud";
const subtitle = "Acceso ilimitado a especialistas y clínicas de alta calidad,";
const description = "con atención preferencial y cobertura internacional.";
const buttonText = "Cotizar póliza";
---

<section class="">
  <div class="w-full">
    <div 
      class="relative overflow-hidden rounded-lg shadow-xl min-h-[650px] sm:min-h-[420px] md:min-h-[650px]"
    >
      <!-- Imagen de fondo usando el componente Image -->
      <!-- Desktop -->
      <Image src={heroBg} alt="Pólizas de salud" class="absolute inset-0 w-full h-full object-cover hidden md:block" />
      <!-- Mobile -->
      <Image src={heroBgMobile} alt="Pólizas de salud mobile" class="absolute inset-0 w-full h-full object-cover md:hidden" />
      <!-- Banda de título en desktop: fija a la derecha, 40% de ancho -->
      <div class="hidden md:block absolute top-40 right-0 md:w-[40%] bg-[#3F5A82] rounded-l-full rounded-r-none py-4 px-6 shadow-md z-10">
        <h2 class="font-extrabold text-white leading-tight text-center"  style="font-size:40px">{policyTitle}</h2>
      </div>
      
      <div class="absolute inset-0  bg-opacity-20 md:hidden"></div>
      
      <div 
        class="absolute inset-0 flex items-center md:items-start justify-center p-6 md:p-0 md:relative md:w-full md:flex md:justify-end"
      >
        <div class="w-full max-w-lg md:w-[40%] p-6 md:p-8 lg:p-10 bg-white md:bg-transparent rounded-lg md:rounded-none z-10 md:shadow-none">

          <div class="text-center md:text-center w-full " style="margin-top:55%">
            
            <!-- Título en móvil: caja azul pequeña centrada -->
            <div class="md:hidden inline-block p-2 mb-4 rounded-lg bg-[#3F5A82] shadow-md">
              <h2 class="text-2xl sm:text-3xl font-extrabold text-white leading-tight">
                {policyTitle}
              </h2>
            </div>

            

            <p class="text-xl sm:text-2xl font-bold text-[#3582B0] leading-snug  sm:mb-3">
              {subtitle}
            </p>
            
            <p class="text-base sm:text-lg text-gray-700 mb-6 md:mb-8">
              {description}
            </p>

            <a href="#" class="inline-block px-8 py-3 text-base font-semibold text-black bg-[#8BC34A] rounded-full shadow-lg transition duration-300 ease-in-out hover:bg-[#A3D66A] hover:shadow-xl">
              {buttonText}
            </a>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>