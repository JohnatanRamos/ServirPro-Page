---
import { Image } from 'astro:assets';

interface Props {
  icon: ImageMetadata;
  alt: string;
  text: string;
  colSpan?: boolean;
}

const { icon, alt, text, colSpan = false } = Astro.props;
---

<div class={`flex items-center gap-4 pb-3 border-b-2 border-servir-blue-banner ${colSpan ? 'md:col-span-2' : ''}`}>
  <Image src={icon} alt={alt} class="w-8 h-8 shrink-0 text-servir-blue-banner" />
  <p class="text-left font-semibold text-gray-800">
    {text}
  </p>
</div>