---
import { Image } from 'astro:assets';
import googleImage from '../../assets/iconos/google_icon_review.svg';

// ReviewCard.astro - Componente reutilizable para tarjetas de rese√±as
export interface Props {
    name: string;
    initial: string;
    timeAgo: string;
    review: string;
    bgColor?: string;
}

const { name, initial, timeAgo, review, bgColor = "bg-blue-500" } = Astro.props;


---

<div class="flex-none w-full md:w-1/2 px-4 md:px-6">
    <div class="bg-gray-100 rounded-lg p-8 h-full relative">
        <!-- Icono de Google en la esquina superior derecha -->
        <div class="absolute top-4 right-4">
            <Image src={googleImage} class="w-6 h-6" alt="Google icon">
        </div>
        
        <div class="flex items-center mb-4">
            <div class={`w-12 h-12 ${bgColor} rounded-full flex items-center justify-center text-white font-bold mr-4`}>
                {initial}
            </div>
            <div>
                <div class="font-semibold text-gray-800 text-left">{name}</div>
                <div class="text-sm text-gray-500 text-left">{timeAgo}</div>
            </div>
        </div>
          <div class="flex text-yellow-400 mt-1">
                    <!-- 5 estrellas -->
                    {Array.from({ length: 5 }).map(() => (
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                    ))}
                </div>
        <p class="text-gray-700 text-sm text-left">{review}</p>
    </div>
</div>